{
  "name": "fasttips",
  "version": "1.0.0",
  "description": "A simple note-taking app built with Electron and Vue",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"npm run dev\" \"electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "concurrently": "^8.2.1",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "vite": "^4.4.9"
  },
  "build": {
    "appId": "com.example.fasttips",
    "productName": "FastTips",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "dist/**/*"
    ],
    "win": {
      "icon": "public/favicon.ico"
    }
  },
  "config": {
    "electronMirror": "https://npmmirror.com/mirrors/electron/"
  }
}